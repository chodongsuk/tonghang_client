<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal" 
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widgeheight_middle" 
        android:id="@+id/ll_clike"
        android:clickable="true"       
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/im_headpic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
             />
	<TextView
	    android:id="@+id/tv_content"
	    android:layout_marginLeft="8dp"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_toRightOf="@+id/im_headpic" 
	    android:layout_marginRight="8dp"
	    android:textSize="@dimen/textsize_small"
	    />
	

	<TextView
	    android:id="@+id/tv_nike"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/im_headpic"
	    android:layout_below="@+id/im_headpic"
	    android:layout_marginTop="4dp"
	    android:textSize="@dimen/textsize_small"
	    android:text="昵称" />

    </RelativeLayout>
    </LinearLayout>
	
	<View 
	    android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        />
</LinearLayout>
